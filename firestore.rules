rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================
    // Helper Functions
    // ============================================
    
    // Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Check if the authenticated user owns this document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // ============================================
    // User Collection Rules
    // ============================================
    match /users/{userId} {
      // Users can read their own profile
      allow read: if isOwner(userId);
      
      // Users can create their own profile during signup
      allow create: if isOwner(userId);
      
      // Users can update their own profile
      allow update: if isOwner(userId);
      
      // Only through admin SDK (backend) for user deletion
      allow delete: if false;
    }
    
    // ============================================
    // Movies Collection Rules
    // ============================================
    match /movies/{movieId} {
      // Anyone authenticated can read movies
      allow read: if isAuthenticated();
      
      // Only admin SDK can write movies (seeding)
      allow write: if false;
    }
    
    // ============================================
    // Bookings Collection Rules
    // ============================================
    match /bookings/{bookingId} {
      // Users can only read their own bookings
      allow read: if isAuthenticated() && 
                    resource.data.userId == request.auth.uid;
      
      // Users can create bookings for themselves
      allow create: if isAuthenticated() && 
                     request.resource.data.userId == request.auth.uid;
      
      // Users can update their own bookings (e.g., cancel)
      allow update: if isAuthenticated() && 
                     resource.data.userId == request.auth.uid &&
                     // Only allow status changes, not tampering with other fields
                     request.resource.data.diff(resource.data).affectedKeys()
                       .hasOnly(['status', 'updatedAt']);
      
      // No deletion - bookings are kept for history
      allow delete: if false;
    }
    
    // ============================================
    // Seats Collection Rules (Availability tracking)
    // ============================================
    match /seats/{seatDocId} {
      // Anyone authenticated can read seat availability
      allow read: if isAuthenticated();
      
      // Anyone authenticated can update seat availability
      // (reserving seats when booking)
      allow create, update: if isAuthenticated();
      
      // No deletion
      allow delete: if false;
    }
    
    // ============================================
    // Catch-all: Deny everything else
    // ============================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
